{
  "name": "hyperkeys",
  "version": "1.1.3",
  "description": "Global shortcuts on steroids",
  "main": "main.js",
  "scripts": {
    "start": "node_modules/.bin/electron build",
    "build:dependencies": "bash scripts/build-dependencies.sh",
    "build": "bash scripts/build.sh",
    "lint": "eslint src",
    "watch": "bash scripts/watch.sh",
    "package:linux": "bash scripts/package-linux.sh",
    "package:windows": "bash scripts/package-windows.sh",
    "serve": "npm run build; electron build & webpack --watch",
    "test": "npm test"
  },
  "author": "Xurei Lab",
  "build": {
    "productName": "HyperKeys",
    "appId": "com.xureilab.hyperkeys",
    "asar": false,
    "mac": {
      "category": "Utility"
    },
    "linux": {
      "category": "Utility",
      "target": "AppImage"
    },
    "directories": {
      "app": "build",
      "output": "dist_packages"
    }
  },
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "@babel/runtime-corejs3": "^7.6.0",
    "core-js": "^3.2.1",
    "debug": "^2.6.9",
    "electron-json-storage": "^2.1.0",
    "gkm": "^0.2.0",
    "hyperkeys-api": "^1.1.1",
    "node-notifier": "^6.0.0",
    "uuid": "^7.0.1",
    "xurei-util": "^1.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "autobind-decorator": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-root-import": "^6.4.1",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-imports": "^2.0.0",
    "css-loader": "^3.4.2",
    "deep-eql": "^4.0.0",
    "electron": "^7.2.1",
    "electron-builder": "^22.4.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^14.2.1",
    "eslint": "^6.3.0",
    "eslint-config-xurei": "^1.1.1",
    "eslint-nibble": "^5.1.0",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-xurei": "^1.0.0",
    "file-loader": "^5.1.0",
    "gutil-log-stream": "^1.0.0",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "indent-stream": "^1.0.0",
    "install": "^0.13.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.1",
    "npm": "^6.14.4",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "reactstrap": "^8.4.1",
    "redux": "^4.0.4",
    "run-sequence": "^1.2.2",
    "sass-loader": "^8.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.1.3",
    "styled-components": "^5.0.1",
    "webpack": "^4.40.1",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.11"
  }
}
