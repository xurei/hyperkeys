{
  "name": "hyperkeys",
  "version": "1.2.4",
  "description": "Global shortcuts on steroids",
  "main": "main.js",
  "scripts": {
    "start": "node_modules/.bin/electron build",
    "build:dependencies": "bash scripts/build-dependencies.sh",
    "build": "bash scripts/build.sh",
    "lint": "eslint src",
    "watch": "bash scripts/watch.sh",
    "package:linux": "bash scripts/package-linux.sh",
    "package:windows": "bash scripts/package-windows.sh",
    "serve": "npm run build; electron build & webpack --watch"
  },
  "author": "Xurei Lab",
  "build": {
    "productName": "HyperKeys",
    "appId": "com.xureilab.hyperkeys",
    "asar": false,
    "mac": {
      "category": "Utility"
    },
    "linux": {
      "category": "Utility",
      "target": "AppImage",
      "icon": "300x300.png",
      "extraFiles": [
        {
          "from": "natives/linux/libappindicator3.so.1",
          "to": "usr/lib/libappindicator3.so.1"
        }
      ]
    },
    "directories": {
      "app": "build",
      "output": "dist_packages"
    }
  },
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@babel/runtime-corejs3": "^7.12.5",
    "active-win": "6.2.0",
    "asfw": "git+https://github.com/xurei/node-asfw.git#337a3b513e82c5cb12146a4343c2dbb6c2582f07",
    "core-js": "^3.8.3",
    "debug": "^4.3.1",
    "electron-json-storage": "^4.3.0",
    "hyperkeys-api": "^1.2.0",
    "node-notifier": "^8.0.1",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "semver": "^7.3.4",
    "uuid": "^7.0.3",
    "xurei-util": "^1.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "autobind-decorator": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-root-import": "^6.6.0",
    "babel-plugin-styled-components": "^1.12.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "brace-expansion": "^1.1.11",
    "css-loader": "^3.6.0",
    "deep-eql": "^4.0.0",
    "electron": "^16.2.6",
    "electron-builder": "^22.11.11",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^15.4.0",
    "eslint": "^6.3.0",
    "eslint-config-xurei": "^1.1.1",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-react-native": "3.8.1",
    "eslint-plugin-xurei": "^1.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "indent-stream": "^1.0.0",
    "install": "^0.13.0",
    "minimist": "^1.2.6",
    "mkdirp": "^1.0.4",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.2",
    "reactstrap": "^8.9.0",
    "redux": "^4.0.4",
    "sass": "^1.49.7",
    "sass-loader": "^12.6.0",
    "style-loader": "^1.3.0",
    "styled-components": "^5.2.1",
    "webpack": "^5.64.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.9.1"
  }
}
